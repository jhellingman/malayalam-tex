if unknown newfont :
beginchar(c_sec_ka,32uw#+rm#,11uh#,0); "secondary ka";
    pickup frame_pen;
    x6 = 0;
    letter_ka(1,2,3,4,4',5,6,7,8,9,10,11);

    draw z1{down}..z4{right}..z3{up};
    draw z4'..z5{left}..z6{up}..z7{right}---z8{right}..z9{down}..
        z10{left}..z11;
    penlabels(1,2,3,4,4',5,6,7,8,9,10,11,20,21);
endchar;
fi;

