beginchar(c_sec_ya,12uw#+rm#,20uh#,10uh#); "secondary ya";
    pickup frame_pen;
    z1=(8uw, 19.5uh);
    z2=(7uw, 12uh);
    z3=(12uw, -4uh);
    z4=(.5[x3,x5], -10uh);
    z5=(-1uw, -6uh);
    z6=(6uw, 0);
    draw z1..z2..z3{down}..z4{left}..z5{up}..z6{up};
    penlabels(1,2,3,4,5,6);
endchar;

