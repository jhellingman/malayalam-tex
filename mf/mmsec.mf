if unknown newfont:
beginchar(c_reepham,2uw#+rm#,29uh#,0); "reepham";
    pickup sub_pen;
    z1=(0uw, 29uh);
    z2=(2uw, 29uh);
    z3=(1uw, 22uh);
    draw z1--z2 & z2--z3 & z3--z1;
    fill z1--z2--z3--cycle;
    penlabels(1,2,3);
endchar;
fi;

