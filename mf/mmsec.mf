beginchar(c_sec_ya_os,6uw#+rm#,20uh#,12uh#); "secondary ya (old style)";
    pickup frame_pen;
    z1=(2uw, 19.5uh);
    z2=(6uw, 5uh);

    z8=(-rm, .5uh);
    z7=(x8-4uw, -6uh);
    z6=(x5+5uw, y7);
    z5=(x8-16uw, .5[y7,y4]);
    z4=(x5+3uw, -12uh);
    z3=(x8, y4);

    draw z1..z2{down}..z3..z4..z5{up}..z6{right}---z7{right}..z8{up};
    penlabels(1,2,3,4,5,6,7,8);
endchar;
fi;

